<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.lyc.live.livelove">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--
    Allows Glide to monitor connectivity status and restart failed requests if users go from a
    a disconnected to a connected network state.
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 外置存储存取权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/live__ic_launcher"
        android:label="@string/live__app_name"
        android:roundIcon="@drawable/live__ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.lyc.live.common.base.LLApplication"
        android:theme="@style/live__AppTheme">
        <activity android:name="com.lyc.live.entry.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>
